---
interface Props {
    title: string;
    body: string;
    href: string;
    image?: string;
}
const { href, title, body, image } = Astro.props;

import { Image } from 'astro:assets';
---
<li class="link-card list-none flex p-1 bg-gray-800 rounded-lg shadow-md transition-all duration-300 ease-in-out hover:bg-gradient-to-r hover:from-purple-400 hover:to-pink-500">
    <a href={href} class="w-full text-white no-underline p-4 rounded-lg flex">
        <div class="flex-grow">
            <h2 class="text-xl font-semibold mb-2">
                {title}
                <span class="ml-2">&rarr;</span>
            </h2>
            <p class="text-base">
                {body}
            </p>
        </div>
        {image && (
                <div class="ml-4">
                    <Image src={image} alt={title} inferSize={true} class="w-24 h-24 object-cover rounded-lg" />
                </div>
        )}
    </a>
</li>
